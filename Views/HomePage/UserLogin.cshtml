@model BloodDonor.Models.LoginProperties


<!-- Link to Bootstrap CSS to style the form and components -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    /* CSS to style the login form */
    .login-form-container {
        background-color: rgba(255, 255, 255, 0.5); /* White background with slight transparency */
        max-width: 500px; /* Maximum width of form */
        margin: auto; /* Centers the form horizontally */
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2); /* Subtle shadow around the form */
        padding: 20px; /* Adds spacing inside the form */
    }

    /* CSS for form group elements like labels and inputs */
    .form-group {
        margin-top: 20px;
    }
    /* Button full-width and larger font size */
    .btn-primary {
        width: 100%; /* Full-width button */
        font-size: 18px; /* Larger text for the button */
    }
    /* CSS for error messages (alert box) */
    .alert-danger {
        margin-top: 20px; /* Adds space above the error message */
    }
</style>
<div class="container mt-5">
    <div class="login-form-container">
        <!-- Form structure starts here -->
        <form asp-action="UserLogin" asp-controller="HomePage" method="post" class="login-form">
            <!-- Heading of the form -->
            <div class="bg-warning text-center">
                <h2>User Login</h2>
            </div>

            <!-- Main content of the form -->
            <div class="d-flex flex-column justify-content-center align-items-center">

                <!-- Username input field -->
                <div class="form-group">
                    <label for="username">Username</label>: <!-- Label for the username input -->
                    <input asp-for="Email" type="text" class="form-control" id="username" required /> <!-- Text input for the username, bound to the "Email" property in the model -->
                </div>

                <!-- Password input field -->
                <div class="form-group">
                    <label for="password">Password</label>: <!-- Label for the password input -->
                    <input asp-for="Password" type="password" class="form-control" id="password" required /> <!-- Password input for the password, bound to the "Password" property in the model -->
                </div>

                <!-- Submit button -->
                <div class="form-group">
                    <button class="btn btn-primary">Login</button> <!-- Button to submit the form, styled with Bootstrap's "btn-primary" class -->
                </div>
            </div>

            <!-- If there is an error message in ViewBag, display it -->
            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert alert-danger mt-3">
                    @ViewBag.ErrorMessage <!-- Shows the error message dynamically passed from the controller -->
                </div>
            }

        </form>
    </div>
</div>